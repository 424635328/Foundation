/* pages/catList/catList.wxss */
.container {
  padding: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  flex: 1;
  margin-left: 10rpx;
  background-color: transparent;
  border: none;
  height: 60rpx;
}

.cat-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.cat-item {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.cat-image {
  width: 100%;
  height: 200rpx;
}

.cat-info {
  padding: 10rpx;
}

.cat-name {
  font-weight: bold;
  margin-bottom: 5rpx;
}

.cat-location {
  font-size: 14rpx;
  color: #666;
}