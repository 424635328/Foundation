.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.cat-image-container {
  width: 300px;
  height: 300px;
  overflow: hidden;
  border-radius: 10px;
  margin-bottom: 20px;
}

.cat-image {
  width: 100%;
  height: 100%;
}

.take-photo-button {
  width: 200px;
  height: 50px;
  background-color: #007bff;
  color: white;
  border-radius: 10px;
  font-size: 18px;
  margin-bottom: 20px;
}

.tips {
  text-align: center;
  font-size: 16px;
}

