.sponsor-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.sponsor-options {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin-bottom: 20rpx;
}

.option {
  width: 30%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  padding: 10rpx;
  background-color: #fff;
  transition: all 0.3s ease;
}

.option image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.option.selected {
  border: 2px solid #00a0e9;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.amount-selected {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #f00;
  margin-left: 10rpx;
}

.sponsor-button {
  width: 80%;
  background-color: #00a0e9;
  color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.sponsor-button:active {
  transform: scale(0.95);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.sponsor-tips {
  font-size: 24rpx;
  color: #666;
}

