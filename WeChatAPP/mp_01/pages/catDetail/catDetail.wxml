<view class="container">
  <image class="cat-image" src="{{catData.imageUrl}}" mode="aspectFit" style="width: 750rpx; height: 446rpx; display: block; box-sizing: border-box"></image>
  <view class="info">
    <view class="item">
      <text class="label">昵称：</text>
      <text class="value">{{catData.name}}</text>
    </view>
    <view class="item">
      <text class="label">性别：</text>
      <text class="value">{{catData.gender}}</text>
    </view>
    <view class="item">
      <text class="label">年龄：</text>
      <text class="value">{{catData.age}}</text>
    </view>
    <view class="item">
      <text class="label">绝育：</text>
      <text class="value">{{catData.sterilization}}</text>
    </view>
    <view class="item">
      <text class="label">地点：</text>
      <text class="value">{{catData.location}}</text>
    </view>
    <view class="item">
      <text class="label">性格：</text>
      <text class="value">{{catData.personality}}</text>
    </view>
    <view class="item">
      <text class="label">特征：</text>
      <text class="value">{{catData.features}}</text>
    </view>
  </view>
</view>