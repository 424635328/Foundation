/* pages/uploadCat/uploadCat.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  padding: 10rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 150rpx;
  padding: 10rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.picker-view {
  width: 100%;
  padding: 10rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.upload-image {
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-image image {
  max-width: 100%;
  max-height: 100%;
}